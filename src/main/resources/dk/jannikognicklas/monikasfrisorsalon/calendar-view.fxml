<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="dk.jannikognicklas.monikasfrisorsalon.controllers.BookingController">

    <padding>
        <Insets bottom="10" left="10" right="10" top="10" />
    </padding>

    <!-- Top: input til ny aftale -->
    <top>
        <VBox spacing="8">
            <Label text="Ny aftale" />
            <HBox spacing="8">
                <TextField fx:id="timeField" promptText="Tid (HH:mm)" />
            <ComboBox fx:id="employeeBox" prefWidth="150.0" promptText="Vælg frisør" />
            <ComboBox fx:id="customerBox" prefWidth="150.0" promptText="Vælg Kunde" />
            <ComboBox fx:id="treatmentBox" prefWidth="150.0" promptText="Vælg Behandling" />
                <Button onAction="#onAddBooking" text="Tilføj" />
            </HBox>
         <HBox prefHeight="0.0" prefWidth="874.0">
            <children>
                   <TextField fx:id="nameField" promptText="Navn" />
               <TextField fx:id="emailField" promptText="Email">
                  <HBox.margin>
                     <Insets left="8.0" />
                  </HBox.margin>
               </TextField>
               <TextField fx:id="phoneField" promptText="Tlf.">
                  <HBox.margin>
                     <Insets left="8.0" />
                  </HBox.margin>
               </TextField>
               <Button mnemonicParsing="false" onAction="#onAddCustomer" text="Ny Kunde">
                  <HBox.margin>
                     <Insets left="10.0" />
                  </HBox.margin>
               </Button>
            </children>
         </HBox>
            <TextArea fx:id="noteArea" prefRowCount="2" promptText="Note">
            <VBox.margin>
               <Insets right="13.0" />
            </VBox.margin></TextArea>
        </VBox>
    </top>

    <!-- Left: dato -->
    <left>
        <VBox spacing="8" BorderPane.alignment="TOP_LEFT">
            <Label text="Vælg dato">
            <VBox.margin>
               <Insets top="10.0" />
            </VBox.margin></Label>
            <DatePicker fx:id="datePicker" onAction="#onDateChanged" />
        </VBox>
    </left>

    <!-- Center: tabel med aftaler -->
    <center>
        <VBox spacing="8">
            <Label text="Aftaler for valgt dato">
            <VBox.margin>
               <Insets left="5.0" top="10.0" />
            </VBox.margin></Label>
            <TableView fx:id="bookingView" VBox.vgrow="ALWAYS">
                <columns>
                    <TableColumn fx:id="timeCol" prefWidth="80" text="Tid" />
                    <TableColumn fx:id="nameCol" prefWidth="220" text="Navn" />
               <TableColumn fx:id="hairTreatmentCol" prefWidth="73.59991455078125" text="Behandling" />
               <TableColumn fx:id="employeeCol" prefWidth="165.60003662109375" text="Frisør" />
                    <TableColumn fx:id="noteCol" prefWidth="294.4001159667969" text="Note" />
                </columns>
            <VBox.margin>
               <Insets left="5.0" right="13.0" />
            </VBox.margin>
            </TableView>
        </VBox>
    </center>

    <!-- Bottom: slet -->
    <bottom>
        <HBox spacing="8">
            <padding>
                <Insets bottom="10" left="10" right="10" top="10" />
            </padding>
            <Button onAction="#onDeleteSelected" text="Slet valgte" />
        </HBox>
    </bottom>

</BorderPane>
